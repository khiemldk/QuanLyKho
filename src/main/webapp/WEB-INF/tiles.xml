<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="master"
		template="/WEB-INF/views/layout/master-layout.jsp">
		<put-attribute name="sidebar"
			value="/WEB-INF/views/layout/sidebar.jsp"></put-attribute>
		<put-attribute name="top-nav"
			value="/WEB-INF/views/layout/top-nav.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/layout/body.jsp" />
	</definition>
	<definition name="home" extends="master">
		<put-attribute name="body"
			value="/WEB-INF/views/home.jsp"></put-attribute>
	</definition>
	<definition name="category-action" extends="master">
		<put-attribute name="body" value="/WEB-INF/views/Category/Category-action.jsp"></put-attribute>
	</definition>
	<definition name="category-list" extends="master">
		<put-attribute name="body" value="/WEB-INF/views/Category/category-list.jsp"></put-attribute>
	</definition>
</tiles-definitions>